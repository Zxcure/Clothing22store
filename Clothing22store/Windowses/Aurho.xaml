<Window x:Class="Clothing22store.Windowses.Aurho"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clothing22store.Windowses"
        mc:Ignorable="d"
        Title="Aurho" Height="450" Width="800">
    <Grid Background="Black">

        <TextBlock x:Name="enter"  HorizontalAlignment="Center"  Margin="0,29,0,0" TextWrapping="Wrap" Text="Thug Life" TextAlignment="Center" VerticalAlignment="Top" Height="100" Width="200" FontSize="40" Foreground="#FFF9F8F8" FontFamily="Old English Text MT"/>
        <StackPanel Height="100" Margin="0" VerticalAlignment="Center" Width="150" HorizontalAlignment="Center" >
            <TextBox x:Name="LoginBox1" Margin="0 10 0 10" HorizontalAlignment="Left" Height="23"  TextAlignment="Center" TextWrapping="Wrap"   VerticalAlignment="Top" Width="150">
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>
            <TextBox x:Name="PassBx1"  Margin="0 10 0 10" Height="23"  VerticalAlignment="Center" Width="150">
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </TextBox.Resources> 
</TextBox>

        </StackPanel>

        <StackPanel Height="100"  Margin="324,291,325,43">
            <Button Content="Log In" Height="25" Margin="0 10 0 10" FontFamily="Old English Text MT" Foreground="White">
                <Button.Background>
                    <ImageBrush/>
                </Button.Background>
            </Button>
            <Button  x:Name="Signin" Click="Signin_Click" Content="Sign Up" Height="25" Width="61"  Margin="0 10 0 10" Foreground="White" FontFamily="Old English Text MT" >
                <Button.Background>
                    <ImageBrush/>
                </Button.Background>
            </Button>
        </StackPanel>



    </Grid>
</Window>
